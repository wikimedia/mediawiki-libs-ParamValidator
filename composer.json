	"require": {
		"php": ">=8.1.0",
		"ext-json": "*",
		"wikimedia/json-codec": "^3.0",
		"wikimedia/testing-access-wrapper": "^3.0",
		"wikimedia/timestamp": "^4.2",
		"wikimedia/at-ease": "^3.0",
		"psr/http-message": "1.1",
		"wikimedia/assert": "^0.5.1",
		"wikimedia/object-factory": "^5.0",
		"wikimedia/message": "^1.0.4"
	},
	"require-dev": {
		"mediawiki/mediawiki-codesniffer": "48.0.0",
		"mediawiki/mediawiki-phan-config": "0.17.0",
		"mediawiki/minus-x": "1.1.3",
		"ockcyp/covers-validator": "1.7.0",
		"php-parallel-lint/php-console-highlighter": "1.0.0",
		"php-parallel-lint/php-parallel-lint": "1.4.0",
		"phpunit/phpunit": "9.6.21",
		"wikimedia/update-history": "^1.0"
	},
	"autoload": {
		"psr-4": {
			"Wikimedia\\ParamValidator\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Wikimedia\\ParamValidator\\Tests\\": "tests/"
		}
	},
	"scripts": {
		"test": [
			"parallel-lint . --exclude vendor",
			"php -d 'extension=pcov.so' vendor/bin/phpunit",
			"covers-validator",
			"phan --allow-polyfill-parser --long-progress-bar",
			"@phpcs",
			"minus-x check ."
		],
		"fix": [
			"minus-x fix .",
			"phpcbf"
		],
		"phan": "phan -d . --long-progress-bar",
		"phpcs": "phpcs -sp --cache"
	},
	"config": {
		"prepend-autoloader": false,
		"optimize-autoloader": true,
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
